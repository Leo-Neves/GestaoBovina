<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerHeaderOutside"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contentHeaderLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewBackgroundDrawerHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imageViewDrawerHeaderLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutUserBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25sp"
        android:orientation="vertical"
        >


    <LinearLayout
        android:id="@+id/linearLayoutContainerHeaderSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:visibility="gone">

        <br.agr.terras.materialdroid.ButtonRectangle
            android:id="@+id/buttonSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:background="@color/MaterialPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutContainerHeaderInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="3"
        android:visibility="visible"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp">

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/textViewHeaderNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Netto Juparanã Tester"
        android:textColor="@color/black_33"
        android:textSize="20sp"
        android:textStyle="bold"
        android:lines="1" />
</LinearLayout>

        <TextView
            android:id="@+id/textViewHeaderCargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Consultor Técnico"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/black_33" />

        <TextView
            android:id="@+id/textViewHeaderEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:visibility="visible"
            android:text="manoel_rosario@juparana.net"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black_33"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutContainerHeaderLastSync"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|right"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última Sincronização:\t"
            android:textColor="@color/black_33"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ontem às 18:33h:"
            android:textColor="@color/black_33"
            android:id="@+id/textViewDataUltimaAtualizacao" />

    </LinearLayout>
        <View
            android:id="@+id/viewSeparadorUser"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbb8d6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp" />
    </LinearLayout>
</LinearLayout>
