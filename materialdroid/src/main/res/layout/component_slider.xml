<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewTituloSeekBarMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:gravity="left"
                android:layout_weight="2"
                android:textSize="15sp"
                android:text="" />

            <TextView
                android:id="@+id/texViewQuantidadeSeekBarMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:gravity="right"
                android:text=""
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/linearLayoutSliderMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingRight="50dp">

                <br.agr.terras.materialdroid.childs.SeekBar
                    android:id="@+id/sliderMaterialInteiro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:sb_discreteMode="false"/>

                <br.agr.terras.materialdroid.childs.SeekBar
                    android:id="@+id/sliderMaterialDecimal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:sb_discreteMode="false"/>
            </LinearLayout>

            <SeekBar
                android:id="@+id/sliderMaterial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:alpha="0"
                android:max="30" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
