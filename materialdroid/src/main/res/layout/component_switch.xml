<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <br.agr.terras.materialdroid.parents.RippleView
        android:id="@+id/rippleComponentSwitch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rv_color="@color/cinza"
        app:rv_framerate="5"
        app:rv_rippleDuration="80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textViewRadioGroupMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />

                <LinearLayout
                    android:id="@+id/linearLayoutSwitchMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        >

                        <br.agr.terras.materialdroid.childs.SwitchAlone
                            android:id="@+id/switchMaterial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:gravity="center" />

                        <br.agr.terras.materialdroid.childs.SwitchAlone
                            android:id="@+id/switchMaterialDummy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:sw_thumbColor="@color/TerrasBlue"
                            app:sw_trackColor="@color/TerrasBlue"
                            android:visibility="visible"
                            android:alpha="0"
                            android:gravity="center" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/switchMaterialResposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/nao"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <br.agr.terras.materialdroid.RadioButton
                        android:id="@+id/radioButtonSim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sim" />

                    <br.agr.terras.materialdroid.RadioButton
                        android:id="@+id/radioButtonNao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:text="@string/nao" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </br.agr.terras.materialdroid.parents.RippleView>

</LinearLayout>